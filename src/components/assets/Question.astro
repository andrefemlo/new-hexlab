---
const { question, answer } = Astro.props;
---

<div
  x-data="{ expanded: false }"
  :class="{ 'opacity-100': expanded, 'opacity-80 hover:opacity-100': ! expanded }"
  class="cursor-pointer group"
>
  <button
    @click="expanded = ! expanded"
    class="flex items-center justify-between w-full p-4 pb-1 text-left font-medium select-none"
  >
    <span class="font-semibold transition-all" :class="{ 'opacity-100': expanded, 'opacity-80 hover:opacity-100': ! expanded }">{ question }</span>

    <svg
      class="w-5 h-5 duration-300 ease-out -rotate-[45deg]"
      :class="{ '-rotate-[45deg]': expanded }"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6"
      ></path>
    </svg>
  </button>

  <div x-show="expanded" x-collapse>
    <div class="p-4 pt-2 opacity-80 font-light">
      { answer }
    </div>
  </div>
</div>
