---
import BaseLayout from "../layouts/BaseLayout.astro";
import Testimonial from "../components/global/Testimonial.astro";
import Heading from "../layouts/Heading.astro";
import Section from "../layouts/Section.astro";
import BlogPost from "../layouts/BlogPost.astro";

const allPosts = await Astro.glob("./cases/*.md");
---

<BaseLayout title="Hexlab | Desenvolvimento de Site">
  <Heading
    headline="PortfÃ³lio"
    subheadline="Confira aqui nossos cases de sucesso!"
  />
  <Section>
    <div
    class="grid sm:grid-cols-2 md:grid-cols-3 grid-flow-row gap-4 pb-20 pt-10"
  >
    {
      allPosts.map((post) => (
        <BlogPost
          title={post.frontmatter.title}
          url={post.url}
          imageurl={post.frontmatter.image.url}
          imagealt={post.frontmatter.image.alt}
        />
      ))
    }
  </div>
  </Section>
  <Testimonial />
</BaseLayout>
